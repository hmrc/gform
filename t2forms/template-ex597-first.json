  "sections": [
    {
      "title": "Before you start",
      "fields": [
        {
          "id": "beforeYouStartInfo1",
          "type": "info",
          "label": "",
          "infoText": "To use this service, make sure you have the following information:  \n* your Unique Taxpayer Reference (UTR) number\n* your business address details\n* start and end dates for your claim\n* details of final product made (including final product weight in kilograms)\n* address where alcohol is used and amount of excise duty paid <br><br>\n\nYou'll also need to upload copies of:  \n* the original invoices from suppliers showing evidence of duty payments\n* the proof that your product is eligible\n* recipes or production sheets that prove that the alcohol has been used in an eligible article\n* your worksheet showing how you arrived at your claim figure (see an example)"
        }
      ]
    },
    {
      "title": "Enter your Unique Taxpayer Reference (UTR) and registered postcode",
      "fields": [
        {
          "id": "uniqueTaxRef",
          "type": "text",
          "label": "Unique Taxpayer Reference (UTR)",
          "helpText": "This is your Company UTR or if a sole trader your Self Assessment UTR. \nExample: 12345 67890",
          "errorMessage": "Please enter your unique taxpayer reference"
        },
        {
          "id": "registeredPostcode",
          "type": "text",
          "label": "Registered postcode",
          "errorMessage": "Please enter your registered postcode"
        },
        {
          "type": "info",
          "id": "utrLong",
          "label": "Where do I find my UTR?",
          "infoType": "long",
          "infoText": "You can usually find your Company UTR in the header of letters from HM Revenue & Customs (HMRC), next to headings such as 'Tax Reference', 'UTR' or 'Official Use'. \n\nIt's a 10-digit number like this, 12345 67890.\n\nYou'll automatically be sent a UTR when you register for Self Assessment or set up a limited company.\n\nYou can also find your UTR in your HMRC online account.\n\nIf you can't find your UTR, call the Self Assessment helpline."
        }
      ]
    },
    {
      "title": "Which of the following best describes your business activity?",
      "fields": [
        {
          "id": "businessActivityChoice",
          "type": "choice",
          "label": "",
          "choices": [
            "I am the manufacturer of an eligible article",
            "I have supplied duty paid alcohol used in the production of an eligible article"
          ],
          "errorMessage": "Please choose the option that best describes your business activity"
        }
      ]
    },
    {
      "title": "Enter your business details",
      "fields": [
        {
          "id": "businessName",
          "type": "text",
          "label": "Business name"
        },
        {
          "id": "businessAddress",
          "type": "address",
          "label": "Business address",
          "international": "true"
        },
        {
          "id": "phoneNum",
          "type": "text",
          "format": "telephoneNumber",
          "label": "Phone number"
        }
      ]
    },
    {
      "title": "Tell us where alcohol is used",
      "fields": [
        {
          "id": "hasAlcoholAddressChangedChoice",
          "type": "choice",
          "label": "Is the address where alcohol is used the same as the business address?",
          "format": "yesno",
          "errorMessage": "Select yes if the address where alcohol is used is the same as the business address"
        }
      ]
    },
    {
      "title": "Enter the address where alcohol is used",
      "includeIf": "${hasAlcoholAddressChangedChoice = 1}",
      "fields": [
        {
          "id": "alcoholAddress",
          "type": "address",
          "label": "",
          "helpText": "Enter the address lines and postcode of the address where alcohol is used",
          "international": "true"
        },
        {
          "id": "phoneNumAlcoholUsed",
          "type": "text",
          "format": "telephoneNumber",
          "label": "Phone number"
        }
      ]
    },
    {
      "title": "Enter your contact person's details",
      "description" : "This is the person we will contact if we need to discuss your claim.",
      "fields": [
        {
          "id": "contactFullName",
          "type": "text",
          "label": "Full name",
          "errorMessage": "Enter your contact person's full name"
        },
        {
          "id": "contactEmail",
          "type": "text",
          "label": "Email address",
          "format": "email",
          "errorMessage": "Enter your contact person's email address"
        }
      ]
    },
    {
      "title": "Enter bank details",
      "shortName": "Payment details",
      "fields": [
        {
          "id": "bankDocVerifyInfo",
          "type": "info",
          "label": "",
          "infoText": "Enter the details of the bank or building society account we should make payment to."
