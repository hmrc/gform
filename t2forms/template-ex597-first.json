        },
        {
          "id": "recipesGroup",
          "type": "group",
          "label": "Recipes",
          "presentationHint": "summariseGroupAsGrid, collapseGroupUnderLabel",
          "fields": [
            {
              "type": "file",
              "id": "recipesSpreadsheet",
              "label": ""
            },
            {
              "type": "info",
              "id": "recipesGuidance",
              "label": "Document guidance",
              "infoType": "long",
              "infoText": "Content goes here"
            }
          ]
        },
        {
          "id": "productionRecordsGroup",
          "type": "group",
          "label": "Production records",
          "presentationHint": "summariseGroupAsGrid, collapseGroupUnderLabel",
          "fields": [
            {
              "type": "file",
              "id": "productionRecordsSpreadsheet",
              "label": ""
            },
            {
              "type": "info",
              "id": "productionGuidance",
              "label": "Document guidance",
