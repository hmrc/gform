{
  "_id": "TST123",
  "formName": "Text Box Component Testing tttt",
  "description": "Testing standard text box component ",
  "authConfig": {
    "authModule": "hmrc"
  },
  "emailTemplateId": "eeitt_submission_confirmation",
  "sections": [
    {
      "title": "Multi-Value Revealing Choice",
      "fields": [
        {
          "id": "revealing",
          "type": "revealingChoice",
          "multivalue": "true",
          "label": "Trading Details",
          "choices": [
            "Address",
            "Date",
            "FileUpload",
            "SortCode",
            "Telephone",
            "Tax Amount",
            "bankAccountNumber"
          ],
          "revealingFields": [
            [
              {
                "type":"address",
                "id":"homeAddress",
                "label":"Home Address",
                "shortName":"Home Address",
                "postcodeLookup":"no"
              }
            ],
            [
              {
                "id":"startDate",
                "type":"date",
                "label":"Enter the Start Date",
                "shortName":"Start Date",
                "format":"precisely YYYY-MM-lastDay"
              },
              {
                "id":"endDate",
                "type":"date",
                "label":"Enter the End Field",
                "shortName":"End Date",
                "format":"precisely YYYY-MM-lastDay"
              }
            ],
            [
              {
                "id": "uploadAbbrev",
                "type": "file",
                "label": "Upload corporate"
              }
            ],
            [
              {
                "id": "sortCode",
                "type": "text",
                "label": "Sort Code",
                "shortName": "Sort Code",
                "format": "ukSortCode"
              }
            ],
            [
              {
                "id": "Telephone",
                "label": "Telephone Number",
                "mandatory": "true",
                "format": "telephoneNumber"
              }
            ],
            [
              {
                "id": "taxAmount1",
                "label": "Enter Tax Amount1",
                "mandatory": "true",
                "format":"number(6,2)"
              },
              {
                "id": "taxAmount2",
                "label": "Enter Tax Amount 2",
                "mandatory": "true",
                "format":"number(6,2)"
              }
            ],
            [
              {
                "id": "bankAccountNumber",
                "type": "text",
                "format": "ukBankAccountNumber",
                "label": "Account number"
              }
            ]
          ]
        }
      ]
    },
    {
      "title": "Dependent Field",
      "includeIf": "${revealing contains 5}",
      "fields": [
        {
          "id": "textBox4",
          "label": "A field dependent on Tax Amount 2",
          "mandatory": "false",
          "format":"number(6,2)"
        }
      ]
    }
  ],
  "declarationSection": {
    "shortName": "Declaration",
    "title": "Declaration",
    "fields": [
      {
        "type": "info",
        "id": "declarationTopInfo",
        "label": "Declaration copy",
        "infoText": "Declaration copy"
      },
      {
        "id": "declarationNameGroup",
        "type": "group",
        "label": "Provide details below of who is signing the declaration",
        "fields": [
          {
            "id": "declarationFirstName",
            "type": "text",
            "label": "First name"
          }
        ]
      }
    ]
  },
  "acknowledgementSection": {
    "shortName": "Acknowledgement Page",
    "title": "Acknowledgement Page",
    "fields": [
      {
        "type": "info",
        "id": "ackpageInfo",
        "label": "SomeContent",
        "infoText": "SomeContent"
      }
    ]
  },
  "destinations": [
    {
      "id": "logit",
      "type": "log"
    },
    {
      "id": "transitionToSubmitted",
      "type": "stateTransition",
      "requiredState": "Submitted"
    }
  ]
}
