{
  "description": "Schema for Gform Form Descriptions",
  "type": "object",
  "properties": {
    "schemaId": {
      "type": "string"
    },
    "_id": {
      "type": "string"
    },
    "formName": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "characterSet": {
      "type": "string"
    },
    "dmsSubmission": {
      "type": "object",
      "properties": {
        "customerId": {
          "type": "string"
        },
        "classificationType": {
          "type": "string"
        },
        "businessArea": {
          "type": "string"
        }
      },
      "required": [
        "classificationType",
        "businessArea"
      ]
    },
    "submitSuccessUrl": {
      "type": "string"
    },
    "submitErrorUrl": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "shortName": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "label"
              ]
            }
          }
        },
        "required": [
          "title",
          "fields"
        ]
      }
    }
  },

  "required": [
    "_id",
    "formName",
    "sections"
  ]
}